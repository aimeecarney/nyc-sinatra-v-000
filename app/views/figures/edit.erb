<h1>Edit a Figure</h1>
<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
 <label>Edit Name:</label>
  <br></br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br></br>
  <label>Edit Landmarks:</label>
  <br></br>
  <% Landmark.all.each do |landmark| %>
  <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
  <% end %>
  <br></br>
  <label>Or Create a New Landmark:</label>
  <br></br>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <label>Edit Title:</label>
  <br></br>
  <% Title.all.each do |title| %>
  <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
  <% end %>
  <br></br>
  <br></br>
  <label>Or Create a New Title:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">
  <br></br>
  <input type="submit" value="Edit Figure">
  </form>
